@model IEnumerable<ConstructionSpending.Models.Time>

@{
    ViewData["Title"] = "CreateTimeTable";
}

<h1>CreateTimeTable</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quarter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Month)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quarter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
